<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>

  <tr>
	  <th><%= link_to 'follows', user_follows_path(user) %></th>
	  <th><%= user.follower.count %></th>
  </tr>

  <tr>
	  <th><%= link_to 'follwers', user_followers_path(user) %></th>
	  <th><%= user.followed.count %></th>
  </tr>

  <% unless user == current_user %> <!--「unless」文は条件式が偽の時に実行する処理-->
  <tr>
	  <% if user.followed.pluck(:follower_id).include?(current_user.id) %>
      <th colspan="2"><%= link_to 'フォロー外す', user_relationships_path(user), class: "btn px-1 py-1 my-2 btn-success", method: :delete %></th>
    <% else %>
      <th colspan="2"><%= link_to 'フォローする', user_relationships_path(user), class: "btn px-1 py-1 my-2 btn-info", method: :post %></th>
    <% end %>
  </tr>
  <% end %>

</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>